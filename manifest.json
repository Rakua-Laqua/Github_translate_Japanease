{
  "manifest_version": 3,
  "name": "GitHub 日本語化（辞書置換）",
  "description": "github.com のUIラベル等を辞書置換で日本語化し、未知語を収集します（外部通信なし）。",
  "version": "1.1.27",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "action": {
    "default_title": "GitHub 日本語化",
    "default_popup": "ui/popup/popup.html"
  },
  "options_page": "ui/options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "shared/common.js",
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/dictionary.json"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ]
}